<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uidemo.uidemo.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast"
        android:id="@+id/btnToast"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/uiTextView"
        android:layout_centerHorizontal="true"
        android:onClick="displayToastMsg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Dialog"
        android:id="@+id/btnAlertDialog"
        android:layout_below="@+id/btnToast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:onClick="exitAlertDialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:id="@+id/btnNotification"
        android:layout_below="@+id/btnAlertDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="statusNotification"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="App to Test UI Components"
        android:id="@+id/uiTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
